extends ../layout

block content
  .container
    .row
      form.form-horizontal(method="post", action="/admin/movie", enctype="multipart/form-data")
        .form-group
          label.col-sm-2.control-label 电影名字
          .col-sm-10
            input#inputTitle.form-control(type="text", name="movie[title]")
        .form-group
          label.col-sm-2.control-label(for="inputDoctor") 电影导演
          .col-sm-10
            input#inputDoctor.form-control(type="text", name="movie[doctor]")
        .form-group
          label.col-sm-2.control-label 国家
          .col-sm-10
            input#inputCountry.form-control(type="text", name="movie[country]")
        .form-group
          label.col-sm-2.control-label(for="inputYear") 上映年代
          .col-sm-10
            input#inputYear.form-control(type="text", name="movie[year]")
        .form-group
          .col-sm-offset-2.col-sm-10
          button.btn.btn-default(type="submit") 录入
